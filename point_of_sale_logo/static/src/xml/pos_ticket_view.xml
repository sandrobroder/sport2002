<?xml version="1.0" encoding="UTF-8"?>
<templates id="point_of_sale.template" xml:space="preserve">

        <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
                <xpath expr="//img[hasclass('pos-receipt-logo')]" position="replace">
                       <t t-if='imageUrl'>
                                    <img class="pos-receipt-logo" t-att-src="imageUrl" alt="Logo"/>
                                </t>
                                <t t-else=''>
                                    <img src='/web/binary/company_logo' class="pos-receipt-logo" alt="Logo"/>
                                </t>


                </xpath>
                <xpath expr="//div[class='pos-receipt-contact']" position="replace"/>

        </t>

</templates>
