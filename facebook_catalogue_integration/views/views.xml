<odoo>
    <data>
        <!-- explicit list view definition -->

        <record id="facebook_catalogue_integration.fb_product_field_list" model="ir.ui.view">
            <field name="name">facebook_catalogue_integration_list</field>
            <field name="model">fb.catalogue.product.field</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" required="1"/>
                    <field name="is_required"/>
                </tree>
            </field>
        </record>

        <record id="facebook_catalogue_integration.fb_odoo_field_mapping_list" model="ir.ui.view">
            <field name="name">facebook_odoo_field_mapping_list</field>
            <field name="model">fb.odoo.field.mapping</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="field_mapping_ids"/>
                </tree>
            </field>
        </record>

        <record id="facebook_catalogue_integration.facebook_catalogue_list" model="ir.ui.view">
            <field name="name">facebook_facebook_catalogue_list</field>
            <field name="model">facebook.catalogue</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="shop_url"/>
                    <field name="feed_url"/>
                </tree>
            </field>
        </record>

        <record id="facebook_catalogue_integration.product_brand_list" model="ir.ui.view">
            <field name="name">product_brand_list</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" required="1"/>
                </tree>
            </field>
        </record>

        <record id="view_product_template_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <notebook>
                    <page string="Facebook Catalogue Attributes">
                        <span>
                            <em>These are the additional attributes for the product used by Facebook Catalogue to
                                identify the product.
                            </em>
                        </span>
                        <group>
                            <group>
                                <field name="brand_id" help="Brand Name for the product"/>
                            </group>
                            <group>
                                <field name="gtin"
                                       help="The Global Trade Item Number (GTIN) is an identifier for trade items, developed by GS1."/>
                                <field name="mpn"
                                       help="Manufacturer Part Number (MPN), The unique number that identifies the product to its manufacturer."/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="facebook_catalogue_integration.fb_odoo_field_mapping_form" model="ir.ui.view">
            <field name="name">facebook_odoo_field_mapping_form</field>
            <field name="model">fb.odoo.field.mapping</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" class="oe_inline" required="1"/>
                            </h1>
                        </div>
                        <group string="Facebook Odoo Field Mapping for Product">
                            <field name="field_mapping_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="fb_product_field_id" attrs="{'required': True}"
                                           options="{'no_open': True, 'no_create': True}"/>
                                    <field name="odoo_model_field_id" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="default_value"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="facebook_catalogue_integration.facebook_catalogue_form" model="ir.ui.view">
            <field name="name">facebook_facebook_catalogue_form</field>
            <field name="model">facebook.catalogue</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Create Feeds Manually" name="action_create_csv" type="object"
                                icon="fa-hand-pointer-o"
                                class="oe_highlight" help="Create Feeds Manually when needed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" class="oe_inline" required="1"
                                       placeholder="Catalogue, eg. Summer Sale"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="price_list_id" required="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="field_mapping_id" required="1"/>
                            </group>
                            <group>
                                <field name="shop_url" required="1"/>
                                <field name="feed_url" readonly="True" force_save="1"/>
                            </group>
                        </group>
                        <group string="Product Selection Criteria for Catalogue">
                            <field name="product_select_by" widget="radio"/>
                            <field name="public_categ_ids" widget="many2many_tags"
                                   attrs="{'invisible':[('product_select_by','!=','category')], 'required': [('product_select_by','=','category')]}"/>
                            <field name="brand_ids" widget="many2many_tags"
                                   attrs="{'invisible':[('product_select_by','!=','brand')], 'required': [('product_select_by','=','brand')]}"/>

                            <label for="date_duration_start" string="Between Dates"
                                   attrs="{'invisible':[('product_select_by','!=','top_sell')]}"/>
                            <div class="o_row" style="width: 50% !important;">
                                <field name="date_duration_start" widget="daterange"
                                       options="{'related_end_date': 'date_duration_end'}"
                                       attrs="{'invisible':[('product_select_by','!=','top_sell')], 'required': [('product_select_by','=','top_sell')]}"/>
                                <span attrs="{'invisible':[('product_select_by','!=','top_sell')]}">to</span>
                                <field name="date_duration_end" widget="daterange"
                                       options="{'related_start_date': 'date_duration_start'}"
                                       attrs="{'invisible':[('product_select_by','!=','top_sell')], 'required': [('product_select_by','=','top_sell')]}"/>
                            </div>
                            <field name="manual_select_product_ids"
                                   attrs="{'invisible':[('product_select_by','!=','manual')], 'required': [('product_select_by','=','manual')]}">
                                <tree>
                                    <field name="default_code"/>
                                    <field name="name"/>
                                    <field name="lst_price"/>
                                </tree>
                            </field>
                            <field name="limit"
                                   attrs="{'invisible':[('product_select_by','not in',['domain', 'top_sell'])], 'required': [('product_select_by','in',['domain', 'top_sell'])]}"/>
                            <field name="rule_products_domain" placeholder="Select product" widget="domain"
                                   options="{'model': 'product.template', 'in_dialog': true}"
                                   attrs="{'invisible':[('product_select_by','!=','domain')], 'required': [('product_select_by','=','domain')]}"/>
                        </group>
                        <group>
                            <group>
                                <field name="attachment" filename="file_name" readonly="1"/>
                                <field name="file_name" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="facebook_catalogue_integration.action_window_fb_fields">
            <field name="name">Facebook Catalogue</field>
            <field name="res_model">fb.catalogue.product.field</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="facebook_catalogue_integration.action_window_fields_mapping" model="ir.actions.act_window">
            <field name="name">Field Mapping</field>
            <field name="res_model">fb.odoo.field.mapping</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="facebook_catalogue_integration.action_window_catalogue" model="ir.actions.act_window">
            <field name="name">Catalogue</field>
            <field name="res_model">facebook.catalogue</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="facebook_catalogue_integration.action_window_products_brands" model="ir.actions.act_window">
            <field name="name">Product Brands</field>
            <field name="res_model">product.brand</field>
            <field name="view_mode">tree</field>
        </record>


        <!-- Top menu item -->

        <menuitem name="Facebook Catalogue" id="facebook_catalogue_integration.menu_root"/>
        <!-- menu categories -->
        <menuitem name="Catalogue" id="facebook_catalogue_integration.menu_1"
                  parent="facebook_catalogue_integration.menu_root" sequence="1"/>
        <menuitem name="Fields" id="facebook_catalogue_integration.menu_2"
                  parent="facebook_catalogue_integration.menu_root" sequence="2"/>
        <menuitem name="Brands" id="facebook_catalogue_integration.menu_4"
                  parent="facebook_catalogue_integration.menu_root" sequence="4"/>
        <!-- actions -->
        <menuitem name="Catalogues" id="facebook_catalogue_integration.menu_3_catalogue"
                  parent="facebook_catalogue_integration.menu_1"
                  action="facebook_catalogue_integration.action_window_catalogue"/>
        <menuitem name="Fields Mapping" id="facebook_catalogue_integration.menu_2_fields_mapping"
                  parent="facebook_catalogue_integration.menu_2"
                  action="facebook_catalogue_integration.action_window_fields_mapping"/>
        <menuitem name="Facebook Fields" id="facebook_catalogue_integration.menu_1_fb_fields"
                  parent="facebook_catalogue_integration.menu_2"
                  action="facebook_catalogue_integration.action_window_fb_fields"/>
        <menuitem name="Product Brands" id="facebook_catalogue_integration.menu_5_brand"
                  parent="facebook_catalogue_integration.menu_4"
                  action="facebook_catalogue_integration.action_window_products_brands"/>
    </data>
</odoo>