<odoo>
	<data>
		<record id="view_order_form_pc" model="ir.ui.view">
			<field name="name">odoo.customer.reference.sale.order</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<field name="payment_term_id" position="before">
					<field name="reference_customer" string="Referencia Prestashop"></field>
                    <field name="payment_method" string="Pago Prestashop"></field>
                    <field name="delivery_method" string="Delivery Method"></field>
					<field name="order_date" string="Fecha Prestahop"></field>
                    <field name="order_state" string="Order State"></field>
					<field name="store_id" string="ID Prestashop"></field>
				</field>
			</field>
			<page string="Extra Info" name="prestashop_data">
				<group>
					<field name="reference_customer" string="Referencia Prestashop"></field>
                    <field name="payment_method" string="Pago Prestashop"></field>
                    <field name="delivery_method" string="Delivery Method"></field>
					<field name="order_date" string="Fecha Prestahop"></field>
                    <field name="order_state" string="Order State"></field>
					<field name="store_id" string="ID Prestashop"></field>
				</group>
			</page>
		</record>
	</data>
</odoo>
