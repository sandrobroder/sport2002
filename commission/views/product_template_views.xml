<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_template_form_view_commission" model="ir.ui.view">
        <field name="name">product.template.common.form.commission</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <label for="sale_ok" position="after">
                <div>
                    <field name="commission_free"/>
                    <label for="commission_free"/>
                </div>
            </label>
        </field>
    </record>

    <record id="product_category_form_view_commission" model="ir.ui.view">
        <field name="name">product.category.form.commission</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="agent_ids" widget="many2many_tags"/>
                <field name="commission_percent"/>
            </field>
        </field>
    </record>
</odoo>
